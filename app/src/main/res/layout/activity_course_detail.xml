<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/course_image"
        android:layout_width="@dimen/course_image_width"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/default_activity_padding"/>

    <TextView
        android:id="@+id/course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_activity_padding"
        android:gravity="center_horizontal"
        android:text="TextView" />

    <TextView
        android:id="@+id/course_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_activity_padding"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_activity_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/allergen_shellfish"
            android:layout_width="@dimen/allergen_image_dimen"
            android:layout_height="@dimen/allergen_image_dimen"
            android:layout_margin="@dimen/allergen_image_margin"
            android:src="@drawable/ico_mariscos"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/allergen_egg"
            android:layout_width="@dimen/allergen_image_dimen"
            android:layout_height="@dimen/allergen_image_dimen"
            android:visibility="gone"
            android:layout_margin="@dimen/allergen_image_margin"
            android:src="@drawable/ico_huevos"/>
        <ImageView
            android:id="@+id/allergen_gluten"
            android:layout_width="@dimen/allergen_image_dimen"
            android:layout_height="@dimen/allergen_image_dimen"
            android:layout_margin="@dimen/allergen_image_margin"
            android:visibility="gone"
            android:src="@drawable/ico_gluten"/>
        <ImageView
            android:id="@+id/allergen_lactose"
            android:layout_width="@dimen/allergen_image_dimen"
            android:layout_height="@dimen/allergen_image_dimen"
            android:layout_margin="@dimen/allergen_image_margin"
            android:visibility="gone"
            android:src="@drawable/ico_leche"/>
        <ImageView
            android:id="@+id/allergen_fish"
            android:layout_width="@dimen/allergen_image_dimen"
            android:layout_height="@dimen/allergen_image_dimen"
            android:layout_margin="@dimen/allergen_image_margin"
            android:visibility="gone"
            android:src="@drawable/ico_pescado"/>
        <ImageView
            android:id="@+id/allergen_soy"
            android:layout_width="@dimen/allergen_image_dimen"
            android:layout_height="@dimen/allergen_image_dimen"
            android:layout_margin="@dimen/allergen_image_margin"
            android:visibility="gone"
            android:src="@drawable/ico_soja"/>
        <ImageView
            android:id="@+id/allergen_husks"
            android:layout_width="@dimen/allergen_image_dimen"
            android:layout_height="@dimen/allergen_image_dimen"
            android:layout_margin="@dimen/allergen_image_margin"
            android:visibility="gone"
            android:src="@drawable/ico_cascara"/>
    </LinearLayout>

    <TextView
        android:id="@+id/course_variants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_activity_padding" />
    <EditText
        android:id="@+id/course_variants_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="gone"/>

</LinearLayout>